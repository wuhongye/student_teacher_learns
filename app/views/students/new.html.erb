<%= render "layouts/header" %>

<h1>创建学生</h1>

<div class="row">
  <div class="col-sm-5">
    <%= form_for @student, url: students_path, method: :post do |f|  %>
    <div class="form-group">
      <ul class="list-unstyled">
        <% @student.errors.messages.values.flatten.each do |error| %>
        <li><i class="fa fa-exclamation-teacher"></i><%= error %></li>
        <% end -%>
      </ul>
    </div>

    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "学生姓名" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "密码" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "确认密码" %>
    </div>

    <div>
      <%= f.radio_button(:mold, "Student", checked: true) %>
      <%= f.label(:mold, "sign up as a student") %>
    </div>

    <div>
      <%= f.check_box(:admin, {}, "true", "false") %>
      <%= f.label(:admin, "sign as admin") %>
    </div>

    <%= f.submit "保存", class: "btn btn-primary" %>
    <% end -%>
  </div>
  <div class="col-sm-7">
  </div>
</div>
