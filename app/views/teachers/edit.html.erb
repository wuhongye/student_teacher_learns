<h1>教师信息编辑</h1>

<div class="row">
    <div class="col-sm-12">
        <%= form_for(@teacher,url: user_path(@teacher), method: :put) do |f|%>
        <div class="form-group">
        <ul class="list-unstyled">
            <% @teacher.errors.messages.values.flatten.each do |error| %>
            <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
            <% end -%>
        </ul>
        </div>

        <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "用户名"%>
        </div>
        <%= f.submit "保存", class: "btn btn-primary" %>
        <% end -%> 
    </div>

    <div class="col-sm-7">
    </div>
</div>

